- name: Clean Docker Images
  hosts: "*"
  become: yes
  become_method: sudo
  tasks:
    - name: Prune all unused Docker images
      command: docker image prune -a -f
      register: prune_output
      ignore_errors: yes
        
    - name: Show prune command result
      debug:
        msg: |
          Command: {{ prune_output.cmd }}
          Return code: {{ prune_output.rc }}
          Stdout:
          {{ prune_output.stdout }}
          Stderr:
          {{ prune_output.stderr }}
